{
  "version": 2,
  "name": "visa-monitor-cloud",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/health",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CLOUD_MODE": "true",
    "DISABLE_PUPPETEER": "true"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  },
  "outputDirectory": "./frontend"
}